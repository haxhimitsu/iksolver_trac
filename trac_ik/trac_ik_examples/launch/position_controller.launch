    <node pkg="joy" name="joy_node" type="joy_node"/>
    <node pkg="trac_ik_examples" name="send_frame" type="send_frame"/>

<group if="$(arg sim)">
        <param name="track_ik_jointpub/cont_topic" value="/pos_joint_traj_controller/command"/>
</group>
    <node pkg="trac_ik_examples" name="track_ik_jointpub" type="trac_ik_jointpub" output="screen"/>
</launch>